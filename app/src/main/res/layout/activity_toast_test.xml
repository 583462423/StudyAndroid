<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_toast_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qxg.study.studyandroid.view.Toast.ToastTest">

    <Button
        android:text="简单用法"
        android:id="@+id/simple_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="自定义位置"
        android:id="@+id/simple_toast_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="添加图片"
        android:id="@+id/toast_add_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="自定义位置"
        android:id="@+id/custom_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
